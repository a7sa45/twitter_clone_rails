<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, label: 'اسم المستخدم', required: true, autofocus: true%>

  <%= f.input :age, label: 'العمر' %>
  <%= f.input :gender, label: 'الجنس' %>
  <%= f.input :bio, label: 'النبذة الشخصية' %>

    <%= f.input :email, label: 'البريد الالكتروني', required: true%>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                label: 'كلمة المرور',
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: 'تاكيد كلمة المرور',
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                label: 'كلمة المرور الحالية',
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "تعديل" %>
  </div>
<% end %>

<h3>الغاء حسابي</h3>

<p>اذا كنت غير يمكنك  <%= link_to "الغاء حسابك", registration_path(resource_name), data: { confirm: "هل انت متاكد؟" }, method: :delete %></p>

<%= link_to "رجوع", :back %>
